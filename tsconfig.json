{
	"extends": "@tsconfig/react-native/tsconfig.json",
	"compilerOptions": {
		"skipLibCheck": true,
		"allowJs": true,
		"jsx": "react-native",
		"resolveJsonModule": true,
		"baseUrl": "./src",
		"paths": {
			"@components/*": ["components/*"],
			"@screens/*": ["screens/*"],
			"@data/*": ["data/*"],
			"@util/*": ["util/*"],
			"@static/*": ["static/*"],
			"@context/*": ["context/*"],
			"@native": ["GameNative.ts"]
		}
	}
}